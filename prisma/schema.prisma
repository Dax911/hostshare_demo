// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum type {
  ADMIN
  FOUNDER
  INVESTOR
  USER
}

enum Industry {
  AGRICULTURE
  ARTIFICIAL_INTELLIGENCE
  AUTOMOTIVE
  BLOCKCHAIN
  CONSTRUCTION
  CONSUMER_GOODS
  CYBERSECURITY
  EDUCATION
  ENERGY
  ENTERTAINMENT
  FINANCE
  FOOD_AND_BEVERAGE
  GAMING
  HEALTHCARE
  HOSPITALITY
  INSURANCE
  LEGAL
  LOGISTICS
  MANUFACTURING
  MARKETING
  MEDIA
  MEDICAL
  MUSIC
  PHARMACEUTICAL
  REAL_ESTATE
  RETAIL
  SECURITY
  SOFTWARE
  SPORTS
  TECHNOLOGY
  TELECOMMUNICATIONS
  TRANSPORTATION
  TRAVEL
  VENTURE_CAPITAL
  OTHER
}

enum fundingRound {
  PRE_INCORPORATION
  PRE_SEED
  SEED
  SERIES_A
  SERIES_B
  SERIES_C
}

model User {
  id         String       @id @default(cuid())
  clerkId    String       @unique
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  lastName   String?
  userName   String?
  email      String?      @unique
  type       type         @default(USER)
  Company    Company?     @relation(fields: [companyId], references: [id])
  companyId  String?
  subscriptionId String?
  hasCompletedSignup Boolean @default(false)
  UserSurvey UserSurvey[]
}

model Company {
  id         String       @id @default(cuid())
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  name       String
  users      User[]
  UserSurvey UserSurvey[]
}

model UserSurvey {
  id              String       @id @default(cuid())
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  user            User         @relation(fields: [userId], references: [id])
  userId          String
  cofounderSearch Boolean
  industry        Industry
  stage           fundingRound
  location        String
  equity          Int
  salary          String
  remote          Boolean
  funding         Int
  Company         Company?     @relation(fields: [companyId], references: [id])
  companyId       String?
}
